<!DOCTYPE html>
<html>

<head>
        <title>
                Login
        </title>
        <link rel='stylesheet' href='/stylesheets/login.css' />
</head>

<body>
        <!-- Log in -->
        <div class=login>
                <h2>Sign In</h2>
                <form action='/api/user/login' method='POST'>
                        <p>Username</p>
                        <input type="text" name="username">
                        <p>Password</p>
                        <input type="password" name="password"><br>
                        <input class="button" type="submit" value="Sign In">
                </form>
        </div>

        <!-- Separation line -->
        <hr class="prettyline" />

        <!-- Register -->
        <div class=register>
                <h2>Register</h2>
                <form id="register-form" action='/api/user/register' method='POST'>
                        <p>Username</p>
                        <input type="text" id="username" name="username" placeholder="e.g. superCoolFrog" required>
                        <p>Email</p>
                        <input type="email" id="email" name="email" placeholder="e.g. 1234@gmail.com" required>
                        <p>Password</p>
                        <input type="password" id="password" name="password">
                        <p>Confirm Password</p>
                        <input type="password" id="password-confirm" name="confirm password"><br>
                        <input class="button" id="register-btn" type="submit" value="Register">
                </form>
        </div>

        <!-- Separation line -->
        <hr class="prettyline" />

        <!-- Forget password -->
        <div class=login>
                <h2>Forget Password?</h2>
                <form action='/api/user/reset' method='POST'>
                        <p>Email</p>
                        <input type="email" name="email" required>
                        <input class="button" type="submit" value="Reset Password">
                </form>
        </div>

        <!-- Script -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="/javascripts/login.js"></script>
</body>

</html>